@model IEnumerable<SmartElectionFrontend.Controllers.Election>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeedsFingerprint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeedsCertificate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalculationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NeedsFingerprint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NeedsCertificate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalculationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.ActionLink("Vote", "Vote", new { id = item.Id })
                @Html.ActionLink("Results", "Results", new { id = item.Id })
            </td>
            @if  (item.UserId == SmartElectionFrontend.Controllers.HomeController.UserId)
            {
                <td>@Html.ActionLink("AddAlternative", "AddAlternative", new { id = item.Id })</td>
            }
        </tr>
}
    </tbody>
</table>
