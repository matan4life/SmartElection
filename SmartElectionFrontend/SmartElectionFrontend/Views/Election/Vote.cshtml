@model SmartElectionFrontend.Models.AlternativeViewModel

@{
    ViewData["Title"] = "Vote";
}

<h1>Vote</h1>

<h4>Alternative</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alt in Model.Alternatives)
        {
            <tr>
                <td>@alt.Text</td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostVote">
            <select asp-for="Alternative" asp-items="Model.Alternatives"></select>
            <div class="form-group">
                <input type="submit" value="Vote" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

